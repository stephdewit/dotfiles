#!/bin/bash

set -e

repo=stan-borg:/volume1/backups/borg/

die() {
	echo "$@" 1>&2
	exit 1
}

[ "$1" = "" ] && die "Missing action"
action="$1"
shift

if [ "$1" = "-v" ]; then
	verbose=1
	shift
else
	verbose=0
fi

export BORG_PASSCOMMAND="cat $HOME/.secret/borg"

if [ "$action" = "create" ]; then
	[ $verbose -eq 1 ] && parameters="-v --stats"
	[ $verbose -eq 1 ] && [ -t 1 ] && parameters="$parameters --progress"

	borg create \
		$parameters \
		--comment "$(uname -a)" \
		--compression zstd,7 \
		--exclude="$HOME"/{'.secret','downloads','media'} \
		"$repo::{hostname}-{now}" \
		"$HOME"
elif [ "$action" = "list" ]; then
	[ $verbose -eq 0 ] && parameters="--short"

	borg list \
		$parameters \
		--prefix '{hostname}-' \
		$repo
elif [ "$action" = "prune" ]; then
	[ $verbose -eq 1 ] && parameters="-v --list"

	borg prune \
		--prefix '{hostname}-' \
		$parameters \
		--keep-within 2d \
		--keep-daily 7 \
		--keep-weekly 4 \
		--keep-monthly -1 \
		$repo
elif [ "$action" = "check" ]; then
	[ $verbose -eq 1 ] && parameters="-v"
	[ $verbose -eq 1 ] && [ -t 1 ] && parameters="$parameters --progress"

	borg check $parameters $repo
elif [ "$action" = "mount" ]; then
	[ "$1" = "" ] && die 'Missing destination folder'
	[ -d "$1" ] || die 'Destination folder does not exist'

	borg mount \
		--prefix '{hostname}-' \
		$repo \
		"$1"
elif [ "$action" = "umount" ] || [ "$action" = "unmount" ]; then
	[ "$1" = "" ] && die 'Missing destination folder'
	[ -d "$1" ] || die 'Destination folder does not exist'

	borg umount "$1"
else
	die 'Unknown action'
fi
