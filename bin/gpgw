#!/usr/bin/env bash

set -e

die() {
	echo "$@" 1>&2
	exit 1
}

encrypt=0
decrypt=0
recipient=contact@stephanedewit.be
sign=-1
keep=1

while getopts ":edr:sSkK" opt; do
	case $opt in
		e ) encrypt=1;;
		d ) decrypt=1;;
		r ) recipient=$OPTARG;;
		S ) sign=0;;
		s ) sign=1;;
		K ) keep=0;;
		k ) keep=1;;
		: ) die "-$OPTARG requires an argument";;
		\?) die "Invalid option: -$OPTARG";;
	esac
done

shift $((OPTIND - 1))

[ $encrypt -ne 1 ] && \
[ $decrypt -ne 1 ] && \
[ $sign -ne 1 ] && \
	die "Missing -e, -d or -s"

[ $encrypt -eq 1 ] && [ $decrypt -eq 1 ] && die "-e and -d are both set"
[ $decrypt -eq 1 ] && [ $sign -eq 1 ] && die "-d and -s are both set"

for file in "$@"; do
	[ -e "$file" ] || die "$file missing"

	if [ $encrypt -eq 1 ]; then
		[ "${file: -4}" == ".gpg" ] && die "$file is already encrypted"

		out=${file}.gpg

		parameters=(--encrypt --recipient "$recipient")
		[ $sign -ne 0 ] && parameters=("${parameters[@]}" --sign)
	elif [ $decrypt -eq 1 ]; then
		[ "${file: -4}" == ".gpg" ] || die "$file is not encrypted"

		out="${file%.*}"

		parameters=(--decrypt)
	elif [ $sign -eq 1 ]; then
		out=${file}.asc

		parameters=(--detach-sig --armor)
	else
		die "Unknown operation"
	fi

	[ -e "$out" ] && die "$out already exists"

	gpg "${parameters[@]}" --output "$out" "$file"

	if [ $encrypt -ne 1 ] && [ $decrypt -ne 1 ]; then
		continue
	fi

	chown --reference "$file" "$out"
	chmod --reference "$file" "$out"
	touch -r "$file" "$out"

	if [ $keep -eq 0 ]; then
		rm "$file"
	fi
done
